{
  "manifest_version": 3,
  "name": "Pixabay Mass Downloader",
  "version": "1.0",
  "description": "Download all submissions from a Pixabay user profile",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "https://pixabay.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://pixabay.com/users/*"],
      "js": ["content-script.js"],
      "css": ["content-styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Pixabay Mass Downloader"
  },
  "web_accessible_resources": [
    {
      "resources": ["blazor-app/*"],
      "matches": ["https://pixabay.com/*"]
    }
  ]
}